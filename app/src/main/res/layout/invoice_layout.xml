<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/headingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp">

        <TextView
            android:id="@+id/headingTV"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Dentist"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/kumbhsansregular"
            android:gravity="start"/>

        <TextView
            android:id="@+id/commissionTV"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:text="10 SAR"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/kumbhsansregular"
            android:gravity="center"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/earningTV"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:text="30 SAR"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/kumbhsansregular"
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/subHeadingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12"
        android:layout_below="@id/headingLayout"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp">

        <TextView
            android:id="@+id/subHeadingTV"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:text="Transportation Charges"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/ensan_cool_gray"
            android:fontFamily="@font/kumbhsansregular"
            android:gravity="start"/>

        <TextView
            android:id="@+id/subCommissionTV"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/ensan_cool_gray"
            android:fontFamily="@font/kumbhsansregular"
            android:gravity="center"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/subEarningTV"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="10 SAR"
            android:visibility="gone"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/ensan_cool_gray"
            android:fontFamily="@font/kumbhsansregular"
            android:gravity="end"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@id/subHeadingLayout"
        android:background="@color/ensan_cool_gray"/>

</RelativeLayout>
