<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:elevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2.5"
                android:id="@+id/family_layout"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsansregular"
                        android:gravity="center"
                        android:text="@string/name_of_patient"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsansregular"
                        android:gravity="center"
                        android:id="@+id/txtname"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsansregular"
                        android:gravity="center"
                        android:text="@string/type"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsansregular"
                        android:gravity="center"
                        android:id="@+id/txttype"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsansregular"
                        android:gravity="center"
                        android:text="@string/phone_no"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsansregular"
                        android:gravity="center"
                        android:id="@+id/txtphone"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsansregular"
                        android:gravity="center"
                        android:text="@string/relationship"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kumbhsansregular"
                        android:gravity="center"
                        android:id="@+id/txt_relation"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">
                <TextView
                    android:id="@+id/medicalHistory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:drawableEnd="@drawable/forward"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/ensan_soft_blue"
                    android:fontFamily="@font/kumbhsansbold"
                    android:gravity="center_vertical"
                    android:text="@string/medical_history"
                    android:textAllCaps="true"
                    android:textColor="@color/ensan_soft_blue"
                    android:textSize="@dimen/_11sdp" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:src="@drawable/delete"
                    app:tint="@color/black"
                    android:scaleType="center"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/deleteMember"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/delete"
                    app:tint="@color/black"
                    android:scaleType="center"/>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>