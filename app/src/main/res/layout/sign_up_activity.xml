<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.signup.view.SignUpActivity"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="backPressed"
                android:padding="@dimen/_5sdp"
                android:rotation="180"
                android:src="@drawable/forward" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/allroundgothicmedium"
                android:gravity="center"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="@dimen/_17sdp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_70sdp"
            android:background="@drawable/top_white_curved"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/allroundgothicbook"
                android:gravity="start"
                android:text="@string/sign_up"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_15sdp" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/NameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nameEt"
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:fontFamily="@font/kumbhsansregular"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:hint="@string/name" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/familyNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/familyNameEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kumbhsansregular"
                            android:inputType="text"
                            android:textSize="@dimen/_13sdp"
                            android:hint="@string/family_name" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dobLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <TextView
                            android:id="@+id/dobEt"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/kumbhsansregular"
                            android:layout_height="wrap_content"
                            android:hint="@string/dob" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_text"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:fontFamily="@font/kumbhsansregular"
                        android:layout_marginEnd="@dimen/_20sdp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/idNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/idNumberEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/kumbhsansregular"
                            android:hint="@string/iqma_national_id" />

                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/kumbhsansregular"
                            android:hint="@string/email" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:layoutDirection="locale"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etpasswordLayout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/passwordEt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/password"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/kumbhsansregular"
                                android:inputType="textPassword" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:id="@+id/img_pwd"
                            android:src="@drawable/hide" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layoutDirection="locale"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/cnfrmPswrdLayout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cnfrmPswrdEt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/confirm_password"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/kumbhsansregular"
                                android:inputType="textPassword" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:id="@+id/img_cpwd"
                            android:src="@drawable/hide" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layoutDirection="ltr"
                        android:weightSum="10">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:gravity="center"
                            android:layout_width="100dp"
                            android:layout_weight="2"
                            android:textSize="@dimen/_13sdp"
                            android:layoutDirection="ltr"
                            android:fontFamily="@font/kumbhsansregular"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:ccp_defaultNameCode="SA"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/mobileNumberLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/mobileNumberEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:background="@null"
                                android:maxLength="9"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/kumbhsansregular"
                                android:hint="@string/_5xxxxxxxxxx"/>

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_text"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_height="wrap_content"
                            android:id="@+id/ck_condition"
                            android:fontFamily="@font/kumbhsansregular"
                            android:textColor="@color/light_text"
                            android:text=""/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kumbhsansregular"
                            android:textSize="@dimen/_13sdp"
                            android:onClick="acceptTerms"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:id="@+id/txt_terms"/>
                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/login_button"
                        android:gravity="center"
                        android:fontFamily="@font/kumbhsansbold"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:text="@string/next"
                        android:textAllCaps="true"
                        android:onClick="nextClick"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>
</layout>
